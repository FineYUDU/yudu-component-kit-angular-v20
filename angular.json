{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "yudu-component-kit": {
      "projectType": "library",
      "root": "projects/yudu-component-kit",
      "sourceRoot": "projects/yudu-component-kit/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/yudu-component-kit/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/yudu-component-kit/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/yudu-component-kit/tsconfig.spec.json"
          }
        }
      }
    },
    "testbed": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/testbed",
      "sourceRoot": "projects/testbed/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/testbed/src/main.ts",
            "tsConfig": "projects/testbed/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/testbed/public"
              }
            ],
            "styles": [
              "projects/testbed/src/styles.css",
              "node_modules/yudu-component-kit/src/lib/styles/index.design-system.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "testbed:build:production"
            },
            "development": {
              "buildTarget": "testbed:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/testbed/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/testbed/public"
              }
            ],
            "styles": [
              "projects/testbed/src/styles.css"
            ]
          }
        }
      }
    }
  }
}
